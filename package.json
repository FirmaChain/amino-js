{
    "name":            "@tendermint/amino-js",
    "description":     "tendermint/go-amino for JavaScript",
    "license":         "Apache-2.0",
    "repository":      {
        "type": "git",
        "url":  "https://github.com/cosmos/amino-js.git"
    },
    "publishConfig":   {
        "access": "public"
    },
    "version":         "0.4.4",
    "main":            "index.js",
    "types":           "index.d.ts",
    "scripts":         {
        "build":          "webpack --config build --progress --colors --display-error-details",
        "clean":          "rm -rf ./dist/*",
        "dirs":           "mkdir ./dist",
        "dist:dev":       "yarn clean && yarn go && NODE_ENV=development yarn build",
        "dist:prod":      "yarn clean && yarn go:min && NODE_ENV=production yarn build && yarn gzip",
        "docs":           "typedoc src/*.ts src/types/*.ts lib/types.ts",
        "go":             "cd go/js && gopherjs build -v -o ../../lib/Amino.js .",
        "go:min":         "yarn go -m",
        "go:watch":       "yarn go -w",
        "gzip":           "gzip -kf ./dist/*.{js,map}",
        "lint":           "eslint --ext .ts,.js .",
        "nuke":           "rm -rf **/node_modules yarn.lock",
        "prepublishOnly": "tsc && yarn lint && yarn dist:prod && yarn test",
        "reset":          "yarn nuke && yarn",
        "setup":          "yarn dirs && yarn dist:dev",
        "test":           "jest --config ./test/jest.config.json",
        "watch":          "yarn build --watch"
    },
    "dependencies":    { },
    "devDependencies": {
        "@babel/core":                      "7.6.4",
        "@babel/preset-env":                "7.6.3",
        "@babel/preset-typescript":         "7.6.0",
        "@types/jest":                      "24.0.20",
        "@types/node":                      "12.11.7",
        "@typescript-eslint/eslint-plugin": "2.5.0",
        "@typescript-eslint/parser":        "2.5.0",
        "babel-loader":                     "8.0.6",
        "eslint":                           "6.6.0",
        "eslint-loader":                    "3.0.2",
        "eslint-plugin-node":               "10.0.0",
        "jest":                             "24.9.0",
        "ts-jest":                          "24.1.0",
        "ts-loader":                        "6.2.1",
        "ts-node":                          "8.4.1",
        "typedoc":                          "0.15.0",
        "typescript":                       "3.6.4",
        "webpack":                          "4.41.2",
        "webpack-cli":                      "3.3.9",
        "webpack-merge":                    "4.2.2"
    },
    "files":           [
        "dist",
        "lib/**/*.{ts,js,map}",
        "src/**/*.{ts,js}",
        "index.js",
        "index.d.ts",
        "package.json",
        "README.md",
        "tsconfig.json",
        "yarn.lock"
    ]
}

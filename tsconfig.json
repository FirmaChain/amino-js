{
    "compilerOptions": {
        "esModuleInterop":              true,
        "jsx":                          "Preserve",
        "module":                       "CommonJS",
        "moduleResolution":             "Node",
        "noEmit":                       true,
        "sourceMap":                    true,
        "strict":                       true,
        "strictPropertyInitialization": false,
        "target":                       "ESNext"
    },
    "include":         [
        "index.d.ts",
        "lib",
        "src",
        "test"
    ],
    "typedocOptions":  {
        "mode":                   "file",
        "readme":                 "none",
        "ignoreCompilerErrors":   true,
        "includeDeclarations":    true,
        "excludeNotExported":     true,
        "excludeExternals":       true,
        "listInvalidSymbolLinks": true
    }
}
